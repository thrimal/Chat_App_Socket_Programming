<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2dfff3;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Client">
   <children>
      <Label layoutX="234.0" layoutY="14.0" text="Chat App">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="txtMessage" layoutX="53.0" layoutY="328.0" onAction="#MessageOnAction" prefHeight="32.0" prefWidth="384.0" promptText="type your msg here...">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></TextField>
      <TextArea fx:id="txtArea" layoutX="53.0" layoutY="80.0" prefHeight="233.0" prefWidth="494.0">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font></TextArea>
      <Button fx:id="btnSend" layoutX="465.0" layoutY="328.0" mnemonicParsing="false" onAction="#SendOnAction" prefHeight="32.0" prefWidth="83.0" text="Send">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
